[Unit]
Description=traefik
After=network-online.target

[Service]
Restart=always
RestartSec=5
TimeoutSec=5
User={{ traefikSystemUser }}
Group={{ traefikSystemGroup }}
ExecStart=/usr/local/bin/traefik --configFile={{ traefikConfigFile }}
PrivateTmp=true
PrivateDevices=false
ProtectHome=true
ProtectSystem=full
ReadWriteDirectories={{ traefikAcmeDir }}
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
AmbientCapabilities=CAP_NET_BIND_SERVICE
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target